print("Bonjour et bienvenu dans ce programme qui vous dit bonjour.")
print("Bonjour")

choix = input("Voulez-vous continuer?")

while choix not in ["o","n"]:
  print("Veuillez répondre par oui (o) ou non (n) ")
  choix = input("Voulez-vous continuer?")

while choix == "o":
   print("Bonjour !")
   choix = input("Voulez-vous continuer?")
   while choix not in ["o","n"]:
     print("Veuillez répondre par oui (o) ou non (n) ")
     choix = input("Voulez-vous continuer?")

if choix == "n":
  print("Au revoir !")

else:
  print("Le programme va exploser !!!")
